@model IEnumerable<ContractMonthlyClaimSystem.Models.LecturerClaim>

@{
    ViewData["Title"] = "Review Claims";
}

<div class="container mt-4">
    <h2>Review Claims</h2>
    <hr />

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Filter Tabs -->
    <ul class="nav nav-tabs mb-3">
        <li class="nav-item">
            <a class="nav-link @(ViewBag.Filter == "All" ? "active" : "")"
               asp-action="Index" asp-route-filter="All">All</a>
        </li>
        <li class="nav-item">
            <a class="nav-link @(ViewBag.Filter == "Pending" ? "active" : "")"
               asp-action="Index" asp-route-filter="Pending">Pending</a>
        </li>
        <li class="nav-item">
            <a class="nav-link @(ViewBag.Filter == "Approved" ? "active" : "")"
               asp-action="Index" asp-route-filter="Approved">Approved</a>
        </li>
        <li class="nav-item">
            <a class="nav-link @(ViewBag.Filter == "Rejected" ? "active" : "")"
               asp-action="Index" asp-route-filter="Rejected">Rejected</a>
        </li>
    </ul>

    @if (Model.Any())
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Lecturer</th>
                        <th>Date Submitted</th>
                        <th>Hours Worked</th>
                        <th>Hourly Rate</th>
                        <th>Total Amount</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var claim in Model)
                    {
                        <tr>
                            <td>@claim.LecturerName</td>
                            <td>@claim.DateSubmitted.ToString("dd MMM yyyy")</td>
                            <td>@claim.HoursWorked</td>
                            <td>R @claim.HourlyRate.ToString("N2")</td>
                            <td>R @claim.TotalAmount.ToString("N2")</td>
                            <td>
                                @if (claim.Status == "Pending")
                                {
                                    <span class="badge bg-warning text-dark">@claim.Status</span>
                                }
                                else if (claim.Status == "Approved")
                                {
                                    <span class="badge bg-success">@claim.Status</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">@claim.Status</span>
                                }
                            </td>
                            <td>
                                <a asp-action="ReviewClaim" asp-route-id="@claim.Id"
                                   class="btn btn-sm btn-primary">Review</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-info text-center">
            <h4>No Claims Found</h4>
            <p>There are no claims matching the selected filter.</p>
        </div>
    }
</div>