@model List<ContractMonthlyClaimSystem.Models.LecturerClaim>

@{
    ViewData["Title"] = "HR Dashboard - Invoice Generation";
}

<div class="container mt-4">
    <h1><i class="fas fa-briefcase"></i> HR Dashboard - Invoice Generation</h1>
    <hr />

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            <i class="fas fa-check-circle"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show">
            <i class="fas fa-exclamation-triangle"></i> @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @* Statistics Cards *@
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card bg-warning text-white">
                <div class="card-body">
                    <h6>Awaiting Processing</h6>
                    <h2>@ViewBag.ApprovedCount</h2>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-success text-white">
                <div class="card-body">
                    <h6>Processed</h6>
                    <h2>@ViewBag.ProcessedCount</h2>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-info text-white">
                <div class="card-body">
                    <h6>Total Pending</h6>
                    <h3>R@(ViewBag.TotalPendingAmount.ToString("N2"))</h3>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-primary text-white">
                <div class="card-body text-center">
                    <form asp-action="BulkGenerateInvoices" method="post">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-light w-100"
                                onclick="return confirm('Generate invoices for all approved claims?');">
                            <i class="fas fa-file-invoice-dollar"></i><br />
                            Bulk Generate
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    @* Quick Links *@
    <div class="mb-3">
        <a asp-action="Index" class="btn btn-outline-primary active">
            <i class="fas fa-home"></i> Dashboard
        </a>
        <a asp-action="ProcessedClaims" class="btn btn-outline-primary">
            <i class="fas fa-check-double"></i> Processed Claims
        </a>
        <a asp-action="Reports" class="btn btn-outline-primary">
            <i class="fas fa-chart-bar"></i> Reports
        </a>
    </div>

    @* Approved Claims Table *@
    <div class="card">
        <div class="card-header bg-primary text-white">
            <h4>Approved Claims Awaiting Invoice Generation (@Model.Count)</h4>
        </div>
        <div class="card-body">
            @if (Model.Count == 0)
            {
                <div class="alert alert-info">
                    <i class="fas fa-info-circle"></i> No approved claims pending processing at this time.
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead class="table-dark">
                            <tr>
                                <th>Claim ID</th>
                                <th>Lecturer</th>
                                <th>Hours</th>
                                <th>Rate</th>
                                <th>Total Amount</th>
                                <th>Approved Date</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var claim in Model)
                            {
                                <tr>
                                    <td><strong>#@claim.Id</strong></td>
                                    <td>@claim.LecturerName</td>
                                    <td>@claim.HoursWorked hrs</td>
                                    <td>R@(claim.HourlyRate.ToString("N2"))</td>
                                    <td><strong class="text-success">R@(claim.TotalAmount.ToString("N2"))</strong></td>
                                    <td>@(claim.ReviewDate.HasValue? claim.ReviewDate.Value.ToString("dd MMM yyyy") : "")</td>
                                    <td>
                                        <a asp-action="ProcessClaim" asp-route-id="@claim.Id"
                                           class="btn btn-sm btn-info">
                                            <i class="fas fa-eye"></i> Review
                                        </a>
                                        <form asp-action="GenerateInvoice" asp-route-id="@claim.Id"
                                              method="post" style="display:inline;">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="btn btn-sm btn-success"
                                                    onclick="return confirm('Generate invoice for R@(claim.TotalAmount.ToString("N2"))?');">
                                                <i class="fas fa-file-invoice-dollar"></i> Generate Invoice
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        </tbody>
                        <tfoot>
                            <tr class="table-secondary">
                                <td colspan="4" class="text-end"><strong>Total:</strong></td>
                                <td colspan="3"><strong class="text-success">R@(Model.Sum(c => c.TotalAmount).ToString("N2"))</strong></td>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            }
        </div>
    </div>
</div>