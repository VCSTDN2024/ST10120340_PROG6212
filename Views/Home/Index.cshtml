@{
    ViewData["Title"] = "Home Page";
}


<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h3 class="mb-0">Monthly Claim Submission</h3>
                </div>
                <div class="card-body">
                    <form asp-action="SubmitClaim" method="post" enctype="multipart/form-data">
                        @Html.AntiForgeryToken()

                        <!-- Monthly Calendar Selection -->
                        <div class="form-group mb-3">
                            <label for="selectedMonth" class="form-label">Select Month:</label>
                            <input type="month"
                                   id="selectedMonth"
                                   name="SelectedMonth"
                                   class="form-control"
                                   value="@DateTime.Now.ToString("yyyy-MM")"
                                   required>
                        </div>

                        <!-- Scheduled Hours -->
                        <div class="form-group mb-3">
                            <label for="scheduledHours" class="form-label">Scheduled Hours:</label>
                            <input type="number"
                                   id="scheduledHours"
                                   name="ScheduledHours"
                                   class="form-control"
                                   step="0.5"
                                   min="0"
                                   max="744"
                                   placeholder="Enter scheduled hours"
                                   required>
                            <div class="form-text">Maximum 744 hours per month</div>
                        </div>

                        <!-- Actual Hours -->
                        <div class="form-group mb-3">
                            <label for="actualHours" class="form-label">Actual Hours:</label>
                            <input type="number"
                                   id="actualHours"
                                   name="ActualHours"
                                   class="form-control"
                                   step="0.5"
                                   min="0"
                                   max="744"
                                   placeholder="Enter actual hours worked"
                                   required>
                            <div class="form-text">Maximum 744 hours per month</div>
                        </div>

                        <!-- Document Upload Section -->
                        <div class="form-group mb-4">
                            <label for="documents" class="form-label">Supporting Documents:</label>
                            <input type="file"
                                   id="documents"
                                   name="Documents"
                                   class="form-control"
                                   multiple
                                   accept=".pdf,.doc,.docx,.jpg,.jpeg,.png,.xlsx,.xls">
                            <div class="form-text">
                                Accepted formats: PDF, Word, Excel, Images (JPG, PNG). Multiple files allowed.
                            </div>

                            <!-- File preview area -->
                            <div id="filePreview" class="mt-2"></div>
                        </div>

                        <!-- Submit Button -->
                        <div class="form-group text-center">
                            <button type="submit" class="btn btn-primary btn-lg px-5">
                                <i class="fas fa-paper-plane"></i> Submit Claim
                            </button>
                            <button type="reset" class="btn btn-secondary btn-lg px-3 ms-2">
                                <i class="fas fa-undo"></i> Reset
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    document.getElementById('documents').addEventListener('change', function(e) {
        const preview = document.getElementById('filePreview');
        preview.innerHTML = '';

        if (this.files.length > 0) {
            const fileList = document.createElement('div');
            fileList.className = 'alert alert-info';
            fileList.innerHTML = '<strong>Selected Files:</strong><ul class="mb-0 mt-2"></ul>';

            const ul = fileList.querySelector('ul');

            Array.from(this.files).forEach(file => {
                const li = document.createElement('li');
                li.textContent = `${file.name} (${(file.size / 1024 / 1024).toFixed(2)} MB)`;
                ul.appendChild(li);
            });

            preview.appendChild(fileList);
        }
    });

</script>