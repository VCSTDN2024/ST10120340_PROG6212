@{
    ViewData["Title"] = "Home Page";
}

<style>
    .welcome-wrapper {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 80vh; /* centers content without breaking layout */
        background-color: #f4f6f8;
    }

    .welcome-container {
        background-color: #fff;
        border-radius: 12px;
        box-shadow: 0 4px 10px rgba(0,0,0,0.1);
        padding: 40px;
        text-align: center;
        max-width: 400px;
        width: 90%;
    }

        .welcome-container h1 {
            color: #2c3e50;
            margin-bottom: 10px;
        }

        .welcome-container p {
            color: #555;
            font-size: 16px;
            margin-bottom: 30px;
        }

        .welcome-container .btn {
            background-color: #0078d7;
            color: white;
            border: none;
            padding: 12px 24px;
            border-radius: 8px;
            cursor: pointer;
            text-decoration: none;
            font-weight: bold;
        }

            .welcome-container .btn:hover {
                background-color: #005fa3;
            }
</style>

<div class="welcome-wrapper">
    <div class="welcome-container">
        <h1>Welcome to the Monthly Claim System</h1>
        <p>Submit, track, and manage your monthly claims quickly and easily.</p>

    </div>
</div>
